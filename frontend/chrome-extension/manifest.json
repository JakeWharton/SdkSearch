{
  "name": "$name",
  "description": "Adds an 'ad' Omnibox command and 'view source' links for the Android SDK",
  "version": "$version",
  "manifest_version": 2,
  "icons": {
    "16": "icon_16.png",
    "32": "icon_32.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "background": {
    "scripts": [
      "background.bundle.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://developer.android.com/reference/*"
      ],
      "js": [
        "content.bundle.js"
      ]
    }
  ],
  "omnibox": {
    "keyword": "$keyword"
  },
  "permissions": [
    "management",
    "storage",
    "https://developer.android.com/"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
